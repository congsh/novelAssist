{
  "name": "novel-assist",
  "version": "0.1.0",
  "description": "小说辅助创作工具",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "start:win": "start.bat",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cross-env NODE_ENV=development webpack serve --config config/webpack.config.js",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "package": "electron-builder build --win --publish never",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ant-design/charts": "^2.3.0",
    "@ant-design/icons": "^5.0.0",
    "@types/d3": "^7.4.3",
    "@types/lodash": "^4.17.16",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-virtualized": "9.21.21",
    "antd": "^5.0.0",
    "archiver": "^7.0.1",
    "d3": "^7.9.0",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "electron-store": "^8.1.0",
    "extract-zip": "^2.0.1",
    "html-to-draftjs": "^1.5.0",
    "immutable": "4.x.x",
    "leaflet": "^1.9.4",
    "level": "^8.0.0",
    "lodash": "^4.17.21",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-draft-wysiwyg": "^1.15.0",
    "react-force-graph": "1.44.3",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.8.0",
    "react-virtualized": "^9.22.6",
    "reactflow": "^11.7.0",
    "sqlite3": "5.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/draft-js": "^0.11.10",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/uuid": "^9.0.0",
    "babel-loader": "^9.1.2",
    "buffer": "^6.0.3",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.33.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "http-browserify": "^1.7.0",
    "https-browserify": "^1.0.0",
    "jest": "^29.4.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "build": {
    "appId": "com.novelassist.app",
    "productName": "小说辅助创作工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/app-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/app-icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "public/icons/installer-icon.ico",
      "uninstallerIcon": "public/icons/uninstaller-icon.ico",
      "installerHeaderIcon": "public/icons/installer-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "小说辅助创作工具",
      "include": "installer.nsh"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ]
  }
}
